<Window x:Class="RootcastleNetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rootcastle Network Monitor v6.0 WPF - Defense Grade" 
        Height="900" Width="1400"
        Background="#0A0A0A"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.ColumnSpan="2" Background="#001500" BorderBrush="#00FF00" BorderThickness="0,0,0,3" Padding="15,10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🏰" FontSize="28" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ROOTCASTLE NETWORK MONITOR" FontSize="18" FontWeight="Bold" Foreground="#00FF00" FontFamily="Consolas"/>
                        <TextBlock Text="WPF • Full Access • SOFIA AI" FontSize="10" Foreground="#008800" FontFamily="Consolas"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ComboBox x:Name="InterfaceComboBox" Width="180" SelectionChanged="InterfaceComboBox_SelectionChanged" Margin="0,0,8,0"/>
                    <Button x:Name="StartButton" Content="▶ START" Background="#001800" Foreground="#00FF00" BorderBrush="#00FF00" Padding="12,6" Click="StartButton_Click"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusIndicator" Text="●" Foreground="#FFAA00" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock x:Name="PacketCountText" Text="0" Foreground="#00FFFF" FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Text=" pkts" Foreground="#006666" FontFamily="Consolas" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Grid.Column="0" Background="#0A0A0A" Margin="4">
            
            <!-- MONITOR TAB -->
            <TabItem Header="📡 MONITOR" Background="#001100">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        
                        <!-- Network Topology -->
                        <Border Background="#050505" BorderBrush="#00FFFF" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="► LIVE NETWORK TOPOLOGY" FontSize="13" Foreground="#00FFFF" FontFamily="Consolas" FontWeight="Bold"/>
                                    <TextBlock x:Name="ExternalIPText" Text="WAN: Checking..." Foreground="#FF6600" FontFamily="Consolas" FontSize="10" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Height="90">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="🌐" FontSize="32" HorizontalAlignment="Center"/>
                                        <TextBlock Text="INTERNET" Foreground="#FF6600" FontFamily="Consolas" FontSize="9" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <Canvas x:Name="TopologyCanvas" Grid.Column="1" Background="#001010"/>
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="🖥️" FontSize="32" HorizontalAlignment="Center"/>
                                        <TextBlock Text="LOCAL" Foreground="#00FF00" FontFamily="Consolas" FontSize="9" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="↓ DOWN" Foreground="#666" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="DownloadSpeedText" Text="0 B/s" Foreground="#00FF00" FontFamily="Consolas" FontSize="12" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="↑ UP" Foreground="#666" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="UploadSpeedText" Text="0 B/s" Foreground="#00FFFF" FontFamily="Consolas" FontSize="12" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="GATEWAY" Foreground="#666" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="GatewayText" Text="-" Foreground="#FFAA00" FontFamily="Consolas" FontSize="12" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                        <TextBlock Text="CONN" Foreground="#666" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="ConnectionCountText" Text="0" Foreground="#FF00FF" FontFamily="Consolas" FontSize="12" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- LIVE TRAFFIC GRAPH -->
                        <Border Background="#050505" BorderBrush="#00AA00" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                            <StackPanel>
                                <Grid Margin="0,0,0,6">
                                    <TextBlock Text="► LIVE TRAFFIC GRAPH" FontSize="12" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="BW: " Foreground="#666" FontFamily="Consolas" FontSize="10"/>
                                        <TextBlock x:Name="BandwidthText" Text="0%" Foreground="#FFAA00" FontFamily="Consolas" FontSize="10" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Height="60">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="#001100" BorderBrush="#004400" BorderThickness="1" CornerRadius="3">
                                        <Canvas x:Name="TrafficGraphCanvas"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                                        <TextBlock x:Name="SentDataText" Text="↑ 0 B" Foreground="#00FF00" FontFamily="Consolas" FontSize="10"/>
                                        <TextBlock x:Name="ReceivedDataText" Text="↓ 0 B" Foreground="#00FFFF" FontFamily="Consolas" FontSize="10"/>
                                        <TextBlock x:Name="LatencyText" Text="~ 0 ms" Foreground="#FFAA00" FontFamily="Consolas" FontSize="10"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- PROTOCOL DISTRIBUTION & QoS -->
                        <Border Background="#050505" BorderBrush="#00AA00" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Protocols -->
                                <StackPanel>
                                    <TextBlock Text="► PROTOCOLS" FontSize="12" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel HorizontalAlignment="Center">
                                            <Border Background="#002200" Width="35" Height="35" BorderBrush="#00FF00" BorderThickness="1" CornerRadius="3">
                                                <Border x:Name="TcpBar" Background="#00FF00" VerticalAlignment="Bottom" Height="15"/>
                                            </Border>
                                            <TextBlock Text="TCP" Foreground="#00FF00" FontFamily="Consolas" FontSize="9" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="TcpCountText" Text="0" Foreground="#00FF00" FontFamily="Consolas" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                            <Border Background="#002222" Width="35" Height="35" BorderBrush="#00FFFF" BorderThickness="1" CornerRadius="3">
                                                <Border x:Name="UdpBar" Background="#00FFFF" VerticalAlignment="Bottom" Height="10"/>
                                            </Border>
                                            <TextBlock Text="UDP" Foreground="#00FFFF" FontFamily="Consolas" FontSize="9" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="UdpCountText" Text="0" Foreground="#00FFFF" FontFamily="Consolas" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                            <Border Background="#222200" Width="35" Height="35" BorderBrush="#FFFF00" BorderThickness="1" CornerRadius="3">
                                                <Border x:Name="IcmpBar" Background="#FFFF00" VerticalAlignment="Bottom" Height="5"/>
                                            </Border>
                                            <TextBlock Text="ICMP" Foreground="#FFFF00" FontFamily="Consolas" FontSize="9" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="IcmpCountText" Text="0" Foreground="#FFFF00" FontFamily="Consolas" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                            <Border Background="#220022" Width="35" Height="35" BorderBrush="#FF00FF" BorderThickness="1" CornerRadius="3">
                                                <Border x:Name="OtherBar" Background="#FF00FF" VerticalAlignment="Bottom" Height="3"/>
                                            </Border>
                                            <TextBlock Text="OTHER" Foreground="#FF00FF" FontFamily="Consolas" FontSize="9" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="OtherCountText" Text="0" Foreground="#FF00FF" FontFamily="Consolas" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                <!-- QoS Metrics -->
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock Text="► QoS METRICS" FontSize="12" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Latency" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
                                            <TextBlock x:Name="QosLatencyText" Text="0 ms" Foreground="#00FF00" FontFamily="Consolas" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Jitter" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
                                            <TextBlock x:Name="QosJitterText" Text="0 ms" Foreground="#FFAA00" FontFamily="Consolas" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Packet Loss" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
                                            <TextBlock x:Name="QosLossText" Text="0%" Foreground="#FF4444" FontFamily="Consolas" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1" Grid.Column="1">
                                            <TextBlock Text="Throughput" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
                                            <TextBlock x:Name="QosThroughputText" Text="0 Mbps" Foreground="#00FFFF" FontFamily="Consolas" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Interface & IP Info -->
                        <Border Background="#050505" BorderBrush="#00AA00" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="► INTERFACE" FontSize="12" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,6"/>
                                    <TextBlock x:Name="InterfaceNameText" Text="Name: -" Foreground="#00FF00" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock x:Name="InterfaceTypeText" Text="Type: -" Foreground="#00FF00" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock x:Name="InterfaceSpeedText" Text="Speed: -" Foreground="#00FF00" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock x:Name="MacAddressText" Text="MAC: -" Foreground="#00FF00" FontFamily="Consolas" FontSize="11"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="► IP CONFIG" FontSize="12" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,6"/>
                                    <TextBlock x:Name="IPv4Text" Text="IPv4: -" Foreground="#00FF00" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock x:Name="SubnetText" Text="Subnet: -" Foreground="#00FF00" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock x:Name="GatewayFullText" Text="Gateway: -" Foreground="#00FF00" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock x:Name="DnsText" Text="DNS: -" Foreground="#00FF00" FontFamily="Consolas" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Connections -->
                        <Border Background="#050505" BorderBrush="#FF6600" BorderThickness="2" CornerRadius="4" Padding="10">
                            <StackPanel>
                                <Grid Margin="0,0,0,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="► CONNECTIONS" FontSize="12" Foreground="#FF6600" FontFamily="Consolas" FontWeight="Bold"/>
                                        <Border Background="#003322" CornerRadius="3" Padding="4,2" Margin="8,0,0,0">
                                            <TextBlock Text="REAL" FontSize="9" Foreground="#00CCFF"/>
                                        </Border>
                                    </StackPanel>
                                    <Button x:Name="CaptureButton" Content="● CAPTURE" Background="#330000" Foreground="#FF4444" BorderBrush="#FF4444" HorizontalAlignment="Right" Padding="8,4" Click="CaptureButton_Click"/>
                                </Grid>
                                <ListBox x:Name="ConnectionsListBox" Height="140" Background="#050505" Foreground="#00FF00" FontFamily="Consolas" FontSize="10" SelectionChanged="ConnectionsListBox_SelectionChanged"/>
                                
                                <!-- Packet Details Panel -->
                                <StackPanel x:Name="PacketDetailsPanel" Visibility="Collapsed" Margin="0,10,0,0" Background="#020800">
                                    <Border BorderBrush="#005500" BorderThickness="1" Padding="8" CornerRadius="3">
                                        <StackPanel>
                                            <TextBlock Text="► PACKET DETAILS" FontSize="11" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,6"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock x:Name="PacketProtocolText" Text="Protocol: -" Foreground="#88FF88" FontFamily="Consolas" FontSize="10"/>
                                                    <TextBlock x:Name="PacketSourceText" Text="Source: -" Foreground="#88FF88" FontFamily="Consolas" FontSize="10"/>
                                                    <TextBlock x:Name="PacketDestText" Text="Destination: -" Foreground="#88FF88" FontFamily="Consolas" FontSize="10"/>
                                                    <TextBlock x:Name="PacketStateText" Text="State: -" Foreground="#88FF88" FontFamily="Consolas" FontSize="10"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock x:Name="PacketPidText" Text="PID: -" Foreground="#88FF88" FontFamily="Consolas" FontSize="10"/>
                                                    <TextBlock x:Name="PacketProcessText" Text="Process: -" Foreground="#88FF88" FontFamily="Consolas" FontSize="10"/>
                                                    <TextBlock x:Name="PacketBytesText" Text="Bytes: -" Foreground="#88FF88" FontFamily="Consolas" FontSize="10"/>
                                                    <TextBlock x:Name="PacketTimeText" Text="Time: -" Foreground="#88FF88" FontFamily="Consolas" FontSize="10"/>
                                                </StackPanel>
                                            </Grid>
                                            <TextBlock Text="HEX Dump:" Foreground="#666" FontFamily="Consolas" FontSize="9" Margin="0,6,0,2"/>
                                            <TextBlock x:Name="PacketHexText" Text="[No Data]" Foreground="#444" FontFamily="Consolas" FontSize="9" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- SCANNER TAB -->
            <TabItem Header="🔍 SCANNER" Background="#220000">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <Border Background="#050505" BorderBrush="#FF6600" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="► NMAP SCANNER" FontSize="13" Foreground="#FF6600" FontFamily="Consolas" FontWeight="Bold"/>
                                    <Border Background="#003322" CornerRadius="3" Padding="4,2" Margin="8,0,0,0">
                                        <TextBlock Text="REAL" FontSize="9" Foreground="#00FF00"/>
                                    </Border>
                                </StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="NmapTargetTextBox" Text="192.168.1.1" Background="#001800" Foreground="#00FF00" FontFamily="Consolas" Padding="6" BorderBrush="#00AA00"/>
                                    <ComboBox x:Name="NmapScanTypeCombo" Grid.Column="1" Margin="8,0,0,0">
                                        <ComboBoxItem Content="Quick" IsSelected="True"/>
                                        <ComboBoxItem Content="Full"/>
                                        <ComboBoxItem Content="Stealth"/>
                                        <ComboBoxItem Content="Service"/>
                                    </ComboBox>
                                </Grid>
                                <CheckBox x:Name="ScanPermissionCheckBox" Margin="0,0,0,8">
                                    <TextBlock Text="⚠️ I have authorization" Foreground="#FFAA00" FontFamily="Consolas" FontSize="10"/>
                                </CheckBox>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="🔍 SCAN" Background="#330000" Foreground="#FF4444" BorderBrush="#FF4444" Padding="10,5" Click="NmapScanButton_Click" Margin="0,0,8,0"/>
                                    <Button x:Name="NmapStopButton" Content="■ STOP" Background="#330000" Foreground="#FF4444" BorderBrush="#FF4444" Padding="10,5" Click="NmapStopButton_Click" IsEnabled="False"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Background="#050505" BorderBrush="#FF6600" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="► SCAN RESULTS" FontSize="12" Foreground="#FF6600" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,8"/>
                                <TextBox x:Name="NmapOutputTextBox" Height="250" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"
                                         Background="#0A0500" Foreground="#00FF00" FontFamily="Consolas" FontSize="11" BorderBrush="#553300"
                                         Text="[NMAP] Ready. Install nmap from https://nmap.org"/>
                            </StackPanel>
                        </Border>
                        <!-- Packet Sender -->
                        <Border Background="#050505" BorderBrush="#00AA00" BorderThickness="2" CornerRadius="4" Padding="10">
                            <StackPanel>
                                <TextBlock Text="► PACKET SENDER" FontSize="12" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TargetHostTextBox" Text="8.8.8.8" Background="#001800" Foreground="#00FF00" FontFamily="Consolas" Padding="6" BorderBrush="#00AA00"/>
                                    <TextBox x:Name="TargetPortTextBox" Grid.Column="1" Text="80" Background="#001800" Foreground="#00FF00" FontFamily="Consolas" Padding="6" BorderBrush="#00AA00" Margin="8,0,0,0"/>
                                </Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="PING" Background="#001800" Foreground="#00FF00" BorderBrush="#00FF00" Padding="8,4" Click="PingButton_Click" Margin="0,0,8,0"/>
                                    <Button Content="TCP" Background="#001800" Foreground="#00FF00" BorderBrush="#00FF00" Padding="8,4" Click="SendTcpButton_Click" Margin="0,0,8,0"/>
                                    <Button Content="DNS" Background="#001800" Foreground="#00FF00" BorderBrush="#00FF00" Padding="8,4" Click="DnsCheckButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- SECURITY INSIGHTS -->
                        <Border Background="#050505" BorderBrush="#FF4444" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="► THREAT DETECTION" FontSize="12" Foreground="#FF4444" FontFamily="Consolas" FontWeight="Bold"/>
                                    <TextBlock x:Name="ThreatCountText" Text="0 threats" Foreground="#FF4444" FontFamily="Consolas" FontSize="10" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="Port Scans" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="PortScanCountText" Text="0" Foreground="#FF6600" FontFamily="Consolas" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="DoS/DDoS" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="DosCountText" Text="0" Foreground="#FF4444" FontFamily="Consolas" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="ARP Spoof" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="ArpSpoofCountText" Text="0" Foreground="#FF00FF" FontFamily="Consolas" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- TLS ANALYSIS -->
                        <Border Background="#050505" BorderBrush="#4488FF" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="► TLS/PKI ANALYSIS" FontSize="12" Foreground="#4488FF" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="TLS 1.3" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="Tls13CountText" Text="0" Foreground="#00FF00" FontFamily="Consolas" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="TLS 1.2" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="Tls12CountText" Text="0" Foreground="#FFAA00" FontFamily="Consolas" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="Weak/Old" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="TlsWeakCountText" Text="0" Foreground="#FF4444" FontFamily="Consolas" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- DNS INSIGHT -->
                        <Border Background="#050505" BorderBrush="#00AA00" BorderThickness="2" CornerRadius="4" Padding="10">
                            <StackPanel>
                                <TextBlock Text="► DNS INSIGHT" FontSize="12" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="Queries" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="DnsQueryCountText" Text="0" Foreground="#00FF00" FontFamily="Consolas" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="NXDOMAIN" Foreground="#888" FontFamily="Consolas" FontSize="9"/>
