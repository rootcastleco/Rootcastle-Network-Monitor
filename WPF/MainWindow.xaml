<Window x:Class="RootcastleNetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rootcastle Network Monitor v6.0 WPF - Defense Grade" 
        Height="800" Width="1400"
        Background="#0A0A0A"
        WindowStartupLocation="CenterScreen">
    
    <Grid Background="#0A0A0A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.ColumnSpan="2" Background="#001500" BorderBrush="#00FF00" BorderThickness="0,0,0,3" Padding="15,10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🏰" FontSize="32" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ROOTCASTLE NETWORK MONITOR" FontSize="20" FontWeight="Bold" Foreground="#00FF00" FontFamily="Consolas"/>
                        <TextBlock Text="WPF Edition • Full Access • SOFIA AI Inside" FontSize="11" Foreground="#008800" FontFamily="Consolas"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ComboBox x:Name="InterfaceComboBox" Width="200" Margin="0,0,8,0"/>
                    <Button x:Name="StartButton" Content="▶ START" Background="#001800" Foreground="#00FF00" Padding="12,8" Click="StartButton_Click"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusIndicator" Text="●" Foreground="#FFAA00" FontSize="20" Margin="0,0,8,0"/>
                    <TextBlock x:Name="PacketCountText" Text="0 packets" Foreground="#00FFFF" FontFamily="Consolas" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Grid.Column="0" Background="#0A0A0A" Margin="4">
            
            <!-- MONITOR TAB -->
            <TabItem Header="📡 MONITOR" Background="#001100">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        
                        <!-- Network Topology -->
                        <Border Background="#050505" BorderBrush="#00FFFF" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="► LIVE NETWORK TOPOLOGY" FontSize="14" Foreground="#00FFFF" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,8"/>
                                <Grid Height="100">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="🌐" FontSize="40" HorizontalAlignment="Center"/>
                                        <TextBlock Text="INTERNET" Foreground="#FF6600" FontFamily="Consolas" FontSize="10" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <Canvas Grid.Column="1" Background="#001010"/>
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="🖥️" FontSize="40" HorizontalAlignment="Center"/>
                                        <TextBlock Text="LOCAL" Foreground="#00FF00" FontFamily="Consolas" FontSize="10" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="↓ DOWNLOAD" Foreground="#666" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="DownloadSpeedText" Text="0 KB/s" Foreground="#00FF00" FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="↑ UPLOAD" Foreground="#666" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="UploadSpeedText" Text="0 KB/s" Foreground="#00FFFF" FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="GATEWAY" Foreground="#666" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="GatewayText" Text="-" Foreground="#FFAA00" FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                        <TextBlock Text="CONNECTIONS" Foreground="#666" FontFamily="Consolas" FontSize="9"/>
                                        <TextBlock x:Name="ConnectionCountText" Text="0" Foreground="#FF00FF" FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Interface Info -->
                        <Border Background="#050505" BorderBrush="#00AA00" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="► INTERFACE" FontSize="13" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="InterfaceNameText" Text="Name: -" Foreground="#00FF00" FontFamily="Consolas"/>
                                    <TextBlock x:Name="InterfaceTypeText" Text="Type: -" Foreground="#00FF00" FontFamily="Consolas"/>
                                    <TextBlock x:Name="InterfaceStatusText" Text="Status: -" Foreground="#00FF00" FontFamily="Consolas"/>
                                    <TextBlock x:Name="InterfaceSpeedText" Text="Speed: -" Foreground="#00FF00" FontFamily="Consolas"/>
                                    <TextBlock x:Name="MacAddressText" Text="MAC: -" Foreground="#00FF00" FontFamily="Consolas"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="► IP CONFIG" FontSize="13" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="IPv4Text" Text="IPv4: -" Foreground="#00FF00" FontFamily="Consolas"/>
                                    <TextBlock x:Name="IPv6Text" Text="IPv6: -" Foreground="#00FF00" FontFamily="Consolas"/>
                                    <TextBlock x:Name="SubnetText" Text="Subnet: -" Foreground="#00FF00" FontFamily="Consolas"/>
                                    <TextBlock x:Name="GatewayFullText" Text="Gateway: -" Foreground="#00FF00" FontFamily="Consolas"/>
                                    <TextBlock x:Name="DnsText" Text="DNS: -" Foreground="#00FF00" FontFamily="Consolas"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Connections -->
                        <Border Background="#050505" BorderBrush="#FF6600" BorderThickness="2" CornerRadius="4" Padding="10">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="► CONNECTIONS" FontSize="14" Foreground="#FF6600" FontFamily="Consolas" FontWeight="Bold"/>
                                    <Button x:Name="CaptureButton" Content="● CAPTURE" Background="#330000" Foreground="#FF4444" HorizontalAlignment="Right" Click="CaptureButton_Click"/>
                                </Grid>
                                <ListBox x:Name="ConnectionsListBox" Height="150" Background="#050505" Foreground="#00FF00" FontFamily="Consolas"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- SCANNER TAB -->
            <TabItem Header="🔍 SCANNER" Background="#220000">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <Border Background="#050505" BorderBrush="#FF6600" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="► NMAP SCANNER" FontSize="14" Foreground="#FF6600" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="NmapTargetTextBox" Text="192.168.1.1" Background="#001800" Foreground="#00FF00" FontFamily="Consolas" Padding="8"/>
                                    <ComboBox x:Name="NmapScanTypeCombo" Grid.Column="1" Margin="8,0,0,0">
                                        <ComboBoxItem Content="Quick" IsSelected="True"/>
                                        <ComboBoxItem Content="Full"/>
                                        <ComboBoxItem Content="Stealth"/>
                                    </ComboBox>
                                </Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="🔍 SCAN" Background="#330000" Foreground="#FF4444" Padding="10,5" Click="NmapScanButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Background="#050505" BorderBrush="#FF6600" BorderThickness="2" CornerRadius="4" Padding="10">
                            <StackPanel>
                                <TextBlock Text="► RESULTS" FontSize="14" Foreground="#FF6600" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBox x:Name="NmapOutputTextBox" Height="300" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                                         Background="#0A0500" Foreground="#00FF00" FontFamily="Consolas" Text="[NMAP] Ready"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- SOFIA AI TAB -->
            <TabItem Header="🧠 SOFIA AI" Background="#001133">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <Border Background="#050505" BorderBrush="#00CCFF" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="► AI SETTINGS" FontSize="14" Foreground="#00CCFF" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Margin="0,0,8,0">
                                        <TextBlock Text="API Key:" Foreground="#888" FontFamily="Consolas" Margin="0,0,0,4"/>
                                        <PasswordBox x:Name="ApiKeyBox" Background="#001100" Foreground="#00FF00" FontFamily="Consolas"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Model:" Foreground="#888" FontFamily="Consolas" Margin="0,0,0,4"/>
                                        <ComboBox x:Name="AIModelComboBox">
                                            <ComboBoxItem Content="LLaMA 3.2 (Free)" Tag="meta-llama/llama-3.2-3b-instruct:free" IsSelected="True"/>
                                            <ComboBoxItem Content="DeepSeek V3" Tag="deepseek/deepseek-chat"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <Border Background="#001520" BorderBrush="#00CCFF" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="► SOFIA AI ASSISTANT" FontSize="16" Foreground="#00CCFF" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock x:Name="AIAnalysisText" Foreground="#00CCFF" FontFamily="Consolas" TextWrapping="Wrap" MinHeight="150"
                                           Text="[SOFIA] Merhaba! Ben SOFIA AI asistanınızım."/>
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="AIQueryTextBox" Text="Analyze my network..." Background="#001800" Foreground="#00FF00" FontFamily="Consolas" Padding="8"/>
                                    <Button Grid.Column="1" Content="🚀 SEND" Background="#001530" Foreground="#00CCFF" Margin="8,0,0,0" Padding="10,5" Click="AIAnalyzeButton_Click"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Terminal Panel -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="4">
            <Border Background="#050505" BorderBrush="#00AA00" BorderThickness="2" CornerRadius="4" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Margin="0,0,0,8">
                        <TextBlock Text="► TERMINAL" Foreground="#00FF00" FontFamily="Consolas" FontWeight="Bold"/>
                        <Button Content="CLR" Background="#001800" Foreground="#00FF00" HorizontalAlignment="Right" Padding="8,4" Click="ClearTerminalButton_Click"/>
                    </Grid>
                    <ScrollViewer x:Name="TerminalScrollViewer" Grid.Row="1" Background="#020402">
                        <TextBlock x:Name="TerminalOutput" Foreground="#00FF00" FontFamily="Consolas" FontSize="11" TextWrapping="Wrap"
                                   Text="[SYS] Rootcastle v6.0 WPF Edition&#x0a;[SYS] Ready for monitoring..."/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#001500" BorderBrush="#00FF00" BorderThickness="0,3,0,0" Padding="15,8">
            <Grid>
                <TextBlock x:Name="StatusText" Text="[READY]" Foreground="#00DD00" FontFamily="Consolas" FontWeight="Bold"/>
                <TextBlock Text="/REI v6.0 WPF • SOFIA AI" Foreground="#006600" FontFamily="Consolas" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>
